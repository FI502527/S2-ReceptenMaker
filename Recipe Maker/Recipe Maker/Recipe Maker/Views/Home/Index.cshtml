@{
    ViewData["Title"] = "Home Page";
}
@model BusinessObjects.UserObject

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>
        @if (Model.Username == null)
        {
            <div class="card">
                <div class="card-body">
                    <p>There are no users.</p>
                </div>
            </div>
        }
        else
        {
            <div class="card my-3 p-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Username</h4>
                        <p class="card-text">@Model.Id</p>
                        <p class="card-text">@Model.RoleId</p>
                    </div>
                </div>

            </div>
        }
    </p>
</div>
