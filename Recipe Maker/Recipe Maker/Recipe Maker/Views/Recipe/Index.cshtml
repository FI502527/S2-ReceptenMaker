@using BusinessObjects;
@{
    ViewData["Title"] = "Recipes";
}
@model List<BusinessObjects.RecipeObject>

<div class="text-center">
    <h1 class="display-4">Recipes</h1>
    <p>
        @if (Model.Count < 1)
        {
            <div class="card">
                <div class="card-body">
                    <p>There are no recipes.</p>
                </div>
            </div>
        }
        else
        {
            @foreach (RecipeObject recipe in Model)
            {
                <div class="card my-3 p-3">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@recipe.Name</h4>
                            <p class="card-text">@recipe.Id</p>
                            <p class="card-text">@recipe.Owner</p>
                        </div>
                    </div>
                </div>
            }
        }
    </p>
</div>
